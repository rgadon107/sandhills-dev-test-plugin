{
	"name": "rgadon107/sandhills-dev-test",
	"description": "A test plugin to apply foundational knowledge of WordPress APIs.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"homepage": "https://spiralwebdb.com/",
	"support": {
		"issues": "https://github.com/rgadon107/sandhills-dev-test-plugin/issues",
		"source": "https://github.com/rgadon107/sandhills-dev-test-plugin"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require-dev": {
		"brain/monkey": "^2.2",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
		"phpunit/phpunit": "~5.7.9",
		"roave/security-advisories": "dev-master",
		"sirbrillig/phpcs-variable-analysis": "^2.0",
		"squizlabs/php_codesniffer": "^3.2",
		"wimg/php-compatibility": "^8.0",
		"wp-coding-standards/wpcs": "^0.14.1"
	},
	"config": {
		"sort-order": true
	},
	"scripts": {
		"install-codestandards": [
			"Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
		],
		"phpcs-src": "\"vendor/bin/phpcs\" src/",
		"phpcs-tests": "\"vendor/bin/phpcs\" tests/php/",
		"run-phpcs": [
			"@phpcs-src",
			"@phpcs-tests"
		],
		"test-unit": "\"vendor/bin/phpunit\" --testsuite unit --color=always",
		"test-integration": "\"vendor/bin/phpunit\" --testsuite integration --configuration tests/php/integration/phpunit.xml.dist --color=always",
		"run-tests": [
			"@test-unit",
			"@test-integration"
		]
	}
}
